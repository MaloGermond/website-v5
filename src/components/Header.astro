---
import ThemeSwitcher from "@components/ThemeSwitcher.jsx"
import LanguageSwitcher from "@components/LanguageSwitcher.astro"

const {slug} = Astro.props
---

<header class="fixed top-0 left-1/2 -translate-x-1/2 w-full flex z-10 max-w-7xl">
	<div class=" w-full m-2  p-2 flex flex-row-reverse items-center rounded-full border-1 border-gray-400/50 dark:border-gray-700 gap-2 z-10 bg-gray-100/10 dark:bg-gray-900/20 backdrop-blur-sm ">
    <ThemeSwitcher client:load/>
    <LanguageSwitcher slug={slug}/>
  </div>
</header>