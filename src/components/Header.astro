---
import ThemeSwitcher from "@components/ThemeSwitcher.jsx"
import LanguageSwitcher from "@components/LanguageSwitcher.astro"

const {slug} = Astro.props
---

<header class="fixed w-full p-2 top-0 flex flex-row-reverse items-center gap-4 z-10 bg-gray-50/50 dark:bg-gray-900/50 backdrop-blur-sm z-9">
    <div class="fixed left-0 top-0 w-full h-full -z-10" />
    <ThemeSwitcher client:load/>
    <LanguageSwitcher slug={slug}/>
</header>