---
import ThemeSwitcher from "@components/ThemeSwitcher.jsx"
import LanguageSwitcher from "@components/LanguageSwitcher.astro"

const {slug} = Astro.props
---

<header class="fixed w-full p-2 top-0 flex flex-row-reverse items-center gap-4 z-10 bg-gradient-to-b from-gray-50/50 to-transparent dark:from-gray-900/50 dark:to-transparent backdrop-blur-sm z-10">
    <ThemeSwitcher client:load/>
    <LanguageSwitcher slug={slug}/>
</header>