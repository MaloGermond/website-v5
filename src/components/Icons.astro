---
const { name, size = '24', class:classList="" } = Astro.props;
const iconsSrc = import.meta.glob('./../../public/icons/*.svg', {as: 'raw', eager: true });

const icons = Object.fromEntries(
  Object.entries(iconsSrc).map(([path, content]) => {
    const fileName = path.split('/').pop().replace('.svg', '');
    return [fileName, content];
  })
);


---

<svg width={size} height={size} viewBox="0 0 32 32" fill="none" stroke="currentColor" class={"dark:text-slate-50"+ classList} set:html={icons[name]}>
</svg>