---
import { Image } from 'astro:assets';
const { images, col = 4 } = Astro.props;
for (var i = 0; i < 5; i++) {
  for (var j = 0; j < 5; j++) {
    console.log((i * 5 + j)%images.length + '		/ ' + images.length);
  }
}
---

<section
  class="w-full h-[720px] bg-gradient-screens overflow-hidden max-w-7xl m-auto"
>
  <div
    class="w-full h-full flex flex-row gap-8 rotate-[-5deg] translate-x-[-80px]"
  >
    {
      Array.from({ length: col }).map((_, i) => (
        <div class="flex flex-col gap-48 slide-loop slide-item">
          {Array.from({ length: 5 }).map((_, j) => (
            <Image
              src={images[(i * 5 + j)%images.length]}
              alt=""
              key={`${i}-${j}`}
              class="screen shrink-0"
            />
          ))}
        </div>
      ))
    }
  </div>
</section>

<style>
  .bg-gradient-screens {
    background: linear-gradient(293.8deg, #1f2c5a 8.8%, #0d0a1d 87.38%);
  }

  .screen {
    width: 200px;
    height: 350px;
  }

  .slide-item:nth-child(even) {
    margin-top: -100px;
    animation-duration: 15s;
  }

  .slide-item:nth-child(odd) {
    margin-top: -100px;
    animation-duration: 30s;
  }

  @keyframes slideLoop {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateY(-730px); /* Déplace de la largeur totale */
    }
  }

  .slide-loop {
    animation: slideLoop linear infinite;
    display: flex;
    gap: 1rem; /* Espacement entre les éléments */
  }
</style>
