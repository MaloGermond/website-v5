---
const { pageTitle, class: classList, lang} = Astro.props;

import "@styles/global.css";

import Header from "@components/Header.astro";
import UmamiPageViewer from '@analytics/UmamiPageViewer.astro';

const slug = Astro.url.pathname;

---

<html lang={lang} class="light">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
     <UmamiPageViewer name={pageTitle} url={slug}/>
    <title>{pageTitle}</title>
  </head>

  <body class="bg-gray-50 dark:bg-gray-900 transition-colors">
    <Header/>
    <main class={classList}>
      <slot />
    </main>
  </body>
</html>
