---
const { pageTitle, description = "", class: classList, lang } = Astro.props;

import "@styles/global.css";

import Header from "@components/Header.astro";
import UmamiPageViewer from "@analytics/UmamiPageViewer.astro";

const slug = Astro.url.pathname;
---

<html lang={lang} class="light">
  <head>
    <!-- Encodage et compatibilité -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Titre et description de base (SEO) -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Pré-chargement des polices pour les performances -->
    <link
      rel="preload"
      href="/fonts/Satoshi-Variable.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />

    <!-- Analytics -->
    <UmamiPageViewer name={pageTitle} url={slug} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>

  <body
    class="flex flex-col justify-start min-h-screen bg-radial-gradient bg-gray-50 dark:bg-gray-900 transition-colors"
  >
    <Header />
    <main class={classList}>
      <slot />
    </main>
  </body>
</html>

<style>
  .bg-radial-gradient {
    background-image: radial-gradient(
      circle at 50% 100%,
      rgba(134, 176, 231,0.3),
      rgba(255, 255, 255, 0) 50%
    );
  }
  .dark .bg-radial-gradient {
    background-image: radial-gradient(
      circle at 50% 100%,
      rgba(33, 46, 124,0.3),
      rgba(32, 36, 36,0) 50%
    );
  }
</style>
