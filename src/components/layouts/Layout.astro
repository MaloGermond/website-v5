---
const { pageTitle,description = '', class: classList, lang} = Astro.props;

import "@styles/global.css";

import Header from "@components/Header.astro";
import UmamiPageViewer from '@analytics/UmamiPageViewer.astro';

const slug = Astro.url.pathname;

---

<html lang={lang} class="light">
  <head>
    <!-- Encodage et compatibilitÃ© -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Titre et description de base (SEO) -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />


    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
     <UmamiPageViewer name={pageTitle} url={slug}/>
  </head>

  <body class="bg-gray-50 dark:bg-gray-900 transition-colors">
    <Header/>
    <main class={classList}>
      <slot />
    </main>
  </body>
</html>
