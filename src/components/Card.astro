---

const {style="default", padding="4", class:classList} = Astro.props

const colorVariants = {
  default: {
    bg: " bg-slate-50 dark:bg-slate-900",
    border: " border-slate-300 dark:border-slate-700",
    
  },
  accent:{
  	bg: " bg-blue-200 dark:bg-slate-800",
    border: " border-blue-200 dark:border-slate-800",
  }

}

const { bg, border } = colorVariants[style]
const p = " p-"+padding

---

<article
	class={"flex flex-col flex-wrap border rounded-xl  shadow-sm transition-all "+ bg + border + " "+ classList + p}
>
	<slot />
</article>
