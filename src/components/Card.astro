---

const {style="default", padding="4", class:classList} = Astro.props

const colorVariants = {
  default: {
    bg: " bg-slate-50 dark:bg-gray-800",
    border: " border-slate-300 dark:border-gray-700",
    
  },
  accent:{
  	bg: " bg-blue-200 dark:bg-gray-800",
    border: " border-blue-300 dark:border-blue-600",
  }

}

const { bg, border } = colorVariants[style]
const p = " p-"+padding

---

<article
	class={"flex flex-col flex-wrap border transition-all "+ bg + border + " "+ classList + p}
>
	<slot />
</article>
